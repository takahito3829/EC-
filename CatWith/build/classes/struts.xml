<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
"http://struts.apache.org/dtds/struts-2.3.dtd">

<!-- Strutsの詳細設定 -->
<struts>
	<constant name="struts.devMode" value="true" />

	<!-- 対象のpackageを設定 -->
	<package name="com.internousdev.WithCats.action" extends="struts-default">


		<!-- Home画面への遷移(仮ID発行のため) -->
		<action name="TopAction" class="com.internousdev.WithCats.action.TopAction"
			method="execute">
			<result name="success">home.jsp</result>
		</action>

		<!-- お問合わせ画面への遷移 -->
		<action name="InquiryAction" class="com.internousdev.WithCats.action.InquiryAction"
			method="execute">
			<result name="success">inquiry.jsp</result>
		</action>

		<action name="InquiryConfirmAction"
			class="com.internousdev.WithCats.action.InquiryConfirmAction" method="execute">
			<result name="success">inquiryConfirm.jsp</result>
			<result name="error">error.jsp</result>
		</action>

		<action name="InquiryCompleteAction"
			class="com.internousdev.WithCats.action.InquiryCompleteAction"
			method="execute">
			<result name="success">inquiryComplete.jsp</result>
		</action>





		<!-- ユーザー登録画面への遷移 -->
		<action name="UserCreateAction"
			class="com.internousdev.WithCats.action.UserCreateAction" method="execute">
			<result name="success">userCreate.jsp</result>
			<result name="error">error.jsp</result>
		</action>

		<action name="UserCreateConfirmAction"
			class="com.internousdev.WithCats.action.UserCreateConfirmAction"
			method="execute">
			<result name="success">userCreateConfirm.jsp</result>
			<result name="error">error.jsp</result>
		</action>

		<action name="UserCreateCompleteAction"
			class="com.internousdev.WithCats.action.UserCreateCompleteAction"
			method="execute">
			<result name="success">userCreateComplete.jsp</result>
			<result name="error">error.jsp</result>
		</action>




		<!-- LoginAction -->
		<action name="LoginAction" class="com.internousdev.WithCats.action.LoginAction"
			method="execute">
			<result name="success">buyItem.jsp</result>
			<result name="error">login.jsp</result>
		</action>



		<!-- BuyItemAction -->
		<action name="BuyItemAction" class="com.internousdev.WithCats.action.BuyItemAction"
			method="execute">
			<result name="success">buyItemConfirm.jsp</result>
			<result name="error">buyItem.jsp</result>
		</action>


		<!-- BuyItemConfirmAction -->
		<action name="BuyItemConfirmAction"
			class="com.internousdev.WithCats.action.BuyItemConfirmAction" method="execute">
			<result name="success">buyItemComplete.jsp</result>
			<result name="back">buyItem.jsp</result>
		</action>

		<!-- GoCartListAction -->
		<action name="ListAction"
			class="com.internousdev.WithCats.action.ListAction" method="execute">
			<result name="success">list.jsp</result>
		</action>









		<!-- ホーム画面への遷移 -->
		<action name="HomeAction" class="com.internousdev.WithCats.action.HomeAction"
			method="execute">
			<result name="success">home.jsp</result>
		</action>






	</package>
</struts>

